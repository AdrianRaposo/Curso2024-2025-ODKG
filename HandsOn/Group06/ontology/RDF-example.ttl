@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix mair: <http://www.MadridAirQuality.es/ontology/> .

# Classes
mair:TrafficIntensity a owl:Class .
mair:MeteorologicalData a owl:Class .
mair:PollutionData a owl:Class .
mair:SamplingLocation a owl:Class .
mair:WeatherStation a owl:Class .
mair:Pollutant a owl:Class .
mair:WeatherParameter a owl:Class .

# Properties for Traffic Intensity
mair:hasTrafficIntensity a rdf:Property ;
    rdfs:domain mair:TrafficIntensity ;
    rdfs:range xsd:integer .

mair:hasLocation a rdf:Property ;
    rdfs:domain mair:TrafficIntensity ;
    rdfs:range mair:SamplingLocation .

# Properties for Meteorological Data
mair:hasWeatherData a rdf:Property ;
    rdfs:domain mair:MeteorologicalData ;
    rdfs:range xsd:integer .

mair:hasWeatherStation a rdf:Property ;
    rdfs:domain mair:MeteorologicalData ;
    rdfs:range mair:WeatherStation .

mair:hasWeatherParameter a rdf:Property ;
    rdfs:domain mair:MeteorologicalData ;
    rdfs:range mair:WeatherParameter .

# Properties for Pollution Data
mair:hasPollutionData a rdf:Property ;
    rdfs:domain mair:PollutionData ;
    rdfs:range xsd:integer .

mair:hasPollutant a rdf:Property ;
    rdfs:domain mair:PollutionData ;
    rdfs:range mair:Pollutant .

mair:hasSamplingLocation a rdf:Property ;
    rdfs:domain mair:PollutionData ;
    rdfs:range mair:SamplingLocation .

# Instances for February 2024

# Traffic Intensity Data
mair:TrafficIntensity_Feb2024 a mair:TrafficIntensity ;
    mair:hasTrafficIntensity 1200000 ;
    mair:hasLocation mair:SamplingLocation_001 ;
    rdfs:label "Traffic Intensity for February 2024" .

# Meteorological Data
mair:MeteorologicalData_Feb2024 a mair:MeteorologicalData ;
    mair:hasWeatherData 15 ; # Example temperature value
    mair:hasWeatherStation mair:WeatherStation_001 ;
    mair:hasWeatherParameter mair:WeatherParameter_Temperature ;
    rdfs:label "Meteorological Data for February 2024" .

# Pollution Data
mair:PollutionData_Feb2024 a mair:PollutionData ;
    mair:hasPollutionData 50 ; # Example pollution level
    mair:hasPollutant mair:Pollutant_NO2 ;
    mair:hasSamplingLocation mair:SamplingLocation_001 ;
    rdfs:label "Pollution Data for February 2024" .

# Sampling Location
mair:SamplingLocation_001 a mair:SamplingLocation ;
    rdfs:label "Location Code 001" .

# Weather Station
mair:WeatherStation_001 a mair:WeatherStation ;
    rdfs:label "Weather Station 001" .

# Weather Parameters
mair:WeatherParameter_Temperature a mair:WeatherParameter ;
    rdfs:label "Temperature" .

mair:Pollutant_NO2 a mair:Pollutant ;
    rdfs:label "Nitrogen Dioxide (NO2)" .
